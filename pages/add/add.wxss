.container {
  min-height: 100vh;
  background: #fafafa;
  padding: 40rpx 32rpx;
}

.form-wrapper {
  background: white;
  border-radius: 20rpx;
  padding: 48rpx 36rpx;
  box-shadow: 0 4rpx 16rpx rgba(135, 206, 250, 0.1);
  margin-top: 20rpx;
}

.input-wrapper {
  margin-bottom: 60rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 4rpx;
}

.textarea-field {
  width: 100%;
  min-height: 300rpx;
  padding: 28rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 14rpx;
  font-size: 32rpx;
  line-height: 1.6;
  box-sizing: border-box;
  background: #fafafa;
  transition: all 0.3s;
}

.textarea-field:focus {
  border-color: #4a90e2;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(74, 144, 226, 0.1);
}

.picker-view {
  width: 100%;
  padding: 28rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 14rpx;
  background: #fafafa;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}

.picker-view:active {
  background: #f0f0f0;
}

.picker-text {
  font-size: 32rpx;
  color: #1a1a1a;
  flex: 1;
}

.picker-text.placeholder {
  color: #999999;
}

.picker-arrow {
  font-size: 40rpx;
  color: #999999;
  margin-left: 16rpx;
}

.subscribe-wrapper {
  margin-bottom: 40rpx;
  padding: 24rpx;
  background: rgba(135, 206, 250, 0.05);
  border-radius: 14rpx;
  border: 1rpx solid rgba(135, 206, 250, 0.2);
}

.subscribe-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.subscribe-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.subscribe-tip {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

.button-wrapper {
  margin-top: 40rpx;
}

.save-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #87CEFA 100%);
  color: white;
  border-radius: 14rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.4);
}

