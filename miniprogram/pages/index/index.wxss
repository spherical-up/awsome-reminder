.cancel-btn:active {
  background: #eeeeee;
  transform: scale(0.98);
}

.confirm-btn {
  background: linear-gradient(135deg, #4a90e2 0%, #87CEFA 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.confirm-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.4);
}

