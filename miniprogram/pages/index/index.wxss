/* index.wxss - 丰富设计风格 */
.container {
  height: 100vh;
  padding-bottom: 180rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  overflow-y: auto;
  /* 优化滚动性能 */
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
}

/* 头部区域 */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: linear-gradient(135deg, #ffffff 0%, #f8fbff 100%);
  padding: 30rpx;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(135, 206, 250, 0.2);
  overflow: hidden;
  /* 优化渲染性能，减少颤动 */
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  will-change: transform;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(135, 206, 250, 0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -5%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(135, 206, 250, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 1;
}

.title-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 36rpx;
}

.title-icon {
  font-size: 44rpx;
  margin-right: 14rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 2rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #87CEFA 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.stats-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
  padding: 0 12rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  background: rgba(135, 206, 250, 0.08);
  border-radius: 16rpx;
  margin: 0 4rpx;
}

.stat-number {
  font-size: 38rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: #1a1a1a;
}

.stat-number.highlight {
  color: #4a90e2;
  font-size: 40rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.stat-divider {
  width: 1rpx;
  height: 50rpx;
  background: linear-gradient(180deg, transparent 0%, #e0e0e0 50%, transparent 100%);
  margin: 0 8rpx;
}

.progress-bar {
  height: 6rpx;
  background: rgba(135, 206, 250, 0.2);
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 28rpx;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4a90e2 0%, #87CEFA 100%);
  border-radius: 10rpx;
  transition: width 0.5s ease;
  box-shadow: 0 0 12rpx rgba(74, 144, 226, 0.4);
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* 提醒列表 */
.reminder-list {
  padding: 28rpx 32rpx;
  margin-top: 0;
  position: relative;
  z-index: 2;
}

.reminder-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 32rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 16rpx rgba(135, 206, 250, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(135, 206, 250, 0.2);
  position: relative;
  overflow: hidden;
}

.reminder-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, #4a90e2 0%, #87CEFA 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.reminder-item:active {
  transform: translateY(-2rpx) scale(0.99);
  box-shadow: 0 6rpx 20rpx rgba(135, 206, 250, 0.2);
}

.reminder-item.completed {
  background: linear-gradient(135deg, #f8fbff 0%, #ffffff 100%);
  border-color: rgba(135, 206, 250, 0.3);
}

.reminder-item.completed::before {
  opacity: 1;
}

.reminder-left {
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 0;
}

.checkbox-wrapper {
  margin-right: 22rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 42rpx;
  height: 42rpx;
  border: 2.5rpx solid #d1d5db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: white;
  position: relative;
}

.checkbox::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #4a90e2;
  transform: scale(0);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.checkbox.checked {
  border-color: #4a90e2;
  background: linear-gradient(135deg, #4a90e2 0%, #87CEFA 100%);
  box-shadow: 0 0 0 6rpx rgba(74, 144, 226, 0.15);
}

.checkbox.checked::after {
  transform: scale(1.3);
  opacity: 0;
}

.check-icon {
  color: white;
  font-size: 26rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
}

.reminder-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.reminder-title {
  font-size: 32rpx;
  color: #1a1a1a;
  line-height: 1.6;
  word-break: break-all;
  font-weight: 500;
}

.reminder-item.completed .reminder-title {
  text-decoration: line-through;
  color: #999999;
}

/* 过期且未完成的提醒标题显示红色 */
.reminder-title.expired {
  color: #ff4444;
  font-weight: 600;
}

/* 已完成的提醒不显示红色，保持灰色删除线 */
.reminder-item.completed .reminder-title.expired {
  color: #999999;
  font-weight: 500;
}

.reminder-meta {
  display: inline-flex;
  align-items: center;
  margin-top: 10rpx;
  padding: 6rpx 12rpx;
  background: rgba(135, 206, 250, 0.08);
  border-radius: 8rpx;
  width: fit-content;
}

.time-icon {
  font-size: 22rpx;
  margin-right: 6rpx;
}

.reminder-time {
  font-size: 24rpx;
  color: #4a90e2;
  font-weight: 500;
}

.reminder-source {
  margin-top: 8rpx;
  display: inline-flex;
  align-items: center;
  padding: 4rpx 10rpx;
  background: rgba(74, 144, 226, 0.1);
  border-radius: 6rpx;
  width: fit-content;
}

.source-text {
  font-size: 22rpx;
  color: #4a90e2;
  font-weight: 500;
}

.reminder-no-subscribe {
  margin-top: 8rpx;
  display: inline-flex;
  align-items: center;
  padding: 4rpx 10rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 6rpx;
  width: fit-content;
}

.no-subscribe-text {
  font-size: 22rpx;
  color: #ff9800;
  font-weight: 500;
}

.reminder-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.share-btn {
  width: 60rpx!important;
  height: 60rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  color: #e63946;
  border-radius: 12rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(230, 57, 70, 0.15);
  border: none;
  line-height: 1;
  flex-shrink: 0;
  box-sizing: border-box;
}

.share-btn::after {
  border: none;
}

.share-btn:active {
  background: linear-gradient(135deg, #ffd5d5 0%, #ffb3b3 100%);
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(230, 57, 70, 0.2);
}

.share-icon {
  font-size: 30rpx;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  margin: 0;
  /* background: linear-gradient(135deg, #ffe5e5 0%, #ffcccc 100%); */
  color: #e63946;
  border-radius: 12rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(230, 57, 70, 0.15);
  border: none;
  line-height: 1;
  flex-shrink: 0;
  box-sizing: border-box;
}

.delete-btn:active {
  background: linear-gradient(135deg, #ffd5d5 0%, #ffb3b3 100%);
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(230, 57, 70, 0.2);
}

.delete-icon {
  font-size: 30rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 140rpx 40rpx;
}

.empty-illustration {
  position: relative;
  margin-bottom: 40rpx;
  display: inline-block;
}

.empty-icon {
  font-size: 140rpx;
  display: block;
  opacity: 0.7;
  animation: bounce 2.5s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 12rpx rgba(135, 206, 250, 0.3));
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-15rpx) scale(1.05);
  }
}

.empty-dots {
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 10rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #87CEFA;
  animation: pulse 1.8s ease-in-out infinite;
}

.dot:nth-child(1) {
  animation-delay: 0s;
}

.dot:nth-child(2) {
  animation-delay: 0.3s;
}

.dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.3);
  }
}

.empty-title {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 14rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 添加按钮 - 右下角悬浮 */
.add-button {
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #87CEFA 100%);
  color: white;
  padding: 0;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3);
  z-index: 999;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.add-button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.add-button:active::before {
  width: 250rpx;
  height: 250rpx;
}

.add-button:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.4);
}

.add-icon {
  font-size: 56rpx;
  font-weight: 300;
  line-height: 96rpx;
  position: relative;
  z-index: 1;
  text-align: center;
  display: block;
  width: 100%;
  height: 100%;
}

.add-text {
  display: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

.modal.show {
  display: flex;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  background: white;
  border-radius: 28rpx;
  width: 85%;
  max-width: 600rpx;
  overflow: hidden;
  animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(135, 206, 250, 0.2);
}

@keyframes slideUp {
  from {
    transform: translateY(80rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  padding: 40rpx 36rpx 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #f8fbff 0%, #ffffff 100%);
  position: relative;
}

.modal-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, #87CEFA 50%, transparent 100%);
}

.modal-title-wrapper {
  display: flex;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  background: linear-gradient(135deg, #4a90e2 0%, #87CEFA 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
  color: #666666;
  font-size: 34rpx;
  transition: all 0.3s;
}

.modal-close:active {
  background: #eeeeee;
  transform: scale(0.9) rotate(90deg);
}

.modal-body {
  padding: 36rpx;
}

.input-wrapper {
  margin-bottom: 32rpx;
}

.input-wrapper:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 14rpx;
  padding-left: 4rpx;
}

.optional {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}

.input-field {
  width: 100%;
  padding: 26rpx 22rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 14rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafafa;
  transition: all 0.3s;
}

.input-field:focus {
  border-color: #4a90e2;
  background: white;
