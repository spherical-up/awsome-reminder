  padding: 26rpx;
  border-radius: 14rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666666;
