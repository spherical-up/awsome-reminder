/* add.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 32rpx 0;
}

/* 提交按钮区域 */
.submit {
  padding: 32rpx 32rpx 0;
  margin-top: 32rpx;
}

/* 日期时间选择器样式 */
.picker-container {
  background: #fff;
}

.picker-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.picker-toolbar-btn {
  font-size: 32rpx;
  color: #1989fa;
  padding: 8rpx 16rpx;
}

.picker-toolbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.confirm-btn {
  font-weight: 500;
}

/* picker-view 组件样式 */
.picker-view-wrapper {
  position: relative;
  height: 500rpx;
  width: 100%;
}

.picker-wrapper {
  height: 500rpx;
  width: 100%;
}

/* 悬浮标签栏 */
.picker-labels {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 10;
  pointer-events: none;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.85) 50%, transparent 100%);
  padding: 0;
  box-sizing: border-box;
}

.picker-label {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  color: #646566;
  font-weight: 600;
  line-height: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #323233;
  text-align: center;
}

